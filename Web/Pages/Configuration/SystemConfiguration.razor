// Configuration/System/Index.razor
@page "/configuration/system"
@using Web.Components.Common
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Configuración del Sistema - EzPro</PageTitle>

<div class="page-header">
    <h1 class="page-title">
        <i class="fa-light fa-sliders-h me-2"></i>Configuración del Sistema
    </h1>
</div>

<EzTabControl>
    <Tabs>
        <EzTab Title="General" Icon="fa-light fa-cog">
            <Content>
                <EzCard>
                    <Body>
                        <h6>Información de la Empresa</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nombre de la Empresa</label>
                                <input type="text" class="form-control" value="Mi Empresa S.A." />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">RUT</label>
                                <input type="text" class="form-control" value="76.123.456-7" />
                            </div>
                        </div>
                        <button class="btn btn-primary">Guardar Cambios</button>
                    </Body>
                </EzCard>
            </Content>
        </EzTab>
        <EzTab Title="Notificaciones" Icon="fa-light fa-bell">
            <Content>
                <EzCard>
                    <Body>
                        <h6>Configuración de Notificaciones</h6>
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" checked>
                            <label class="form-check-label">Notificaciones por email</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" checked>
                            <label class="form-check-label">Notificaciones en la aplicación</label>
                        </div>
                    </Body>
                </EzCard>
            </Content>
        </EzTab>
        <EzTab Title="Seguridad" Icon="fa-light fa-shield-alt">
            <Content>
                <EzCard>
                    <Body>
                        <h6>Configuración de Seguridad</h6>
                        <div class="alert alert-info">
                            <i class="fa-light fa-info-circle me-2"></i>
                            La autenticación está gestionada por Azure Active Directory
                        </div>
                    </Body>
                </EzCard>
            </Content>
        </EzTab>
    </Tabs>
</EzTabControl>

@code {
    // Lógica de configuración del sistema
}