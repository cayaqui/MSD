@page "/404"
@page "/not-found"
@inject NavigationManager Navigation

<PageTitle>404 - Página no encontrada | EzPro</PageTitle>

<div class="error-page-container">
    <div class="error-content">
        <!-- Número 404 con efecto -->
        <div class="error-code">
            <span class="digit digit-4">4</span>
            <span class="digit digit-0">
                <i class="fa-light fa-cog fa-spin"></i>
            </span>
            <span class="digit digit-4">4</span>
        </div>

        <!-- Mensaje principal -->
        <h1 class="error-title">¡Oops! Página no encontrada</h1>
        <p class="error-description">
            Lo sentimos, la página que estás buscando no existe o ha sido movida.
            Es posible que el enlace esté roto o que hayas escrito mal la dirección.
        </p>

        <!-- Acciones -->
        <div class="error-actions">
            <button class="btn btn-primary btn-lg" @onclick="GoHome">
                <i class="fa-light fa-home me-2"></i>
                Ir al Inicio
            </button>
            <button class="btn btn-outline-primary btn-lg" @onclick="GoBack">
                <i class="fa-light fa-arrow-left me-2"></i>
                Volver Atrás
            </button>
        </div>

        <!-- Sugerencias adicionales -->
        <div class="error-suggestions">
            <p class="text-muted mb-2">También puedes:</p>
            <ul class="suggestion-list">
                <li>
                    <a href="/projects" class="suggestion-link">
                        <i class="fa-light fa-diagram-project me-1"></i>
                        Ver tus proyectos
                    </a>
                </li>
                <li>
                    <a href="/help" class="suggestion-link">
                        <i class="fa-light fa-circle-question me-1"></i>
                        Buscar ayuda
                    </a>
                </li>
                <li>
                    <a href="#" @onclick="ReportIssue" @onclick:preventDefault="true" class="suggestion-link">
                        <i class="fa-light fa-flag me-1"></i>
                        Reportar un problema
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Decoración de fondo -->
    <div class="error-decoration">
        <div class="decoration-circle decoration-circle-1"></div>
        <div class="decoration-circle decoration-circle-2"></div>
        <div class="decoration-circle decoration-circle-3"></div>
    </div>
</div>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("javascript:history.back()");
    }

    private void ReportIssue()
    {
        // En el futuro, esto podría abrir un modal o navegar a una página de soporte
        Navigation.NavigateTo("/support/report-issue");
    }
}

<style>
    .error-page-container {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

    .error-content {
        text-align: center;
        max-width: 600px;
        position: relative;
        z-index: 10;
    }

    /* Estilo del número 404 */
    .error-code {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 2rem;
        gap: 0.5rem;
    }

    .digit {
        font-size: 8rem;
        font-weight: 700;
        line-height: 1;
        color: var(--primary-color);
        text-shadow: 0 4px 8px rgba(var(--primary-rgb), 0.2);
        animation: float 3s ease-in-out infinite;
    }

    .digit-0 {
        position: relative;
        width: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .digit-0 i {
            font-size: 6rem;
            color: var(--primary-color);
        }

    .digit-4:first-child {
        animation-delay: 0s;
    }

    .digit-0 {
        animation-delay: 0.2s;
    }

    .digit-4:last-child {
        animation-delay: 0.4s;
    }

    /* Animación flotante */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .error-title {
        font-size: 2rem;
        font-weight: 600;
        color: var(--default-text-color);
        margin-bottom: 1rem;
    }

    .error-description {
        font-size: 1.125rem;
        color: var(--text-muted);
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* Botones de acción */
    .error-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 3rem;
    }

        .error-actions .btn {
            padding: 0.75rem 2rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .error-actions .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(var(--primary-rgb), 0.3);
            }

    /* Sugerencias */
    .error-suggestions {
        padding-top: 2rem;
        border-top: 1px solid var(--border-color);
    }

    .suggestion-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .suggestion-link {
        color: var(--text-muted);
        text-decoration: none;
        transition: color 0.3s ease;
        font-size: 0.95rem;
    }

        .suggestion-link:hover {
            color: var(--primary-color);
        }

    /* Decoración de fondo */
    .error-decoration {
        position: absolute;
        inset: 0;
        z-index: 1;
        pointer-events: none;
    }

    .decoration-circle {
        position: absolute;
        border-radius: 50%;
        background: var(--primary-gradient);
        opacity: 0.05;
        animation: pulse 4s ease-in-out infinite;
    }

    .decoration-circle-1 {
        width: 400px;
        height: 400px;
        top: -200px;
        right: -200px;
    }

    .decoration-circle-2 {
        width: 300px;
        height: 300px;
        bottom: -150px;
        left: -150px;
        animation-delay: 1s;
    }

    .decoration-circle-3 {
        width: 200px;
        height: 200px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: 2s;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.05;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.1;
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .digit {
            font-size: 5rem;
        }

        .digit-0 {
            width: 80px;
        }

            .digit-0 i {
                font-size: 4rem;
            }

        .error-title {
            font-size: 1.5rem;
        }

        .error-description {
            font-size: 1rem;
        }

        .error-actions {
            flex-direction: column;
            align-items: center;
        }

            .error-actions .btn {
                width: 100%;
                max-width: 300px;
            }

        .suggestion-list {
            flex-direction: column;
            gap: 1rem;
        }
    }

    /* Tema oscuro */
    [data-theme-mode="dark"] .digit {
        text-shadow: 0 4px 16px rgba(var(--primary-rgb), 0.4);
    }

    [data-theme-mode="dark"] .decoration-circle {
        opacity: 0.03;
    }

        [data-theme-mode="dark"] .decoration-circle:hover {
            opacity: 0.05;
        }
</style>