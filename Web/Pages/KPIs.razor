@page "/kpis"
@using Web.Components.Common
@attribute [Authorize]

<PageTitle>KPIs - EzPro</PageTitle>

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fa-light fa-tachometer-alt me-2"></i>Key Performance Indicators
                <EzBadge Text="Nuevo" Variant="EzBadge.BadgeVariant.Success" Size="EzBadge.BadgeSize.Small" Class="ms-2" />
            </h1>
        </div>
        <div class="col-auto">
            <EzDateRangePicker OnRangeSelected="UpdateKPIs" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 mb-4">
        <EzCard>
            <Body>
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <small class="text-muted d-block">Eficiencia de Costos</small>
                        <h3 class="mb-0">92%</h3>
                    </div>
                    <EzAvatar Variant="EzAvatar.AvatarVariant.Success" Size="EzAvatar.AvatarSize.Small">
                        <i class="fa-light fa-arrow-up"></i>
                    </EzAvatar>
                </div>
                <div class="progress" style="height: 5px;">
                    <div class="progress-bar bg-success" style="width: 92%"></div>
                </div>
                <small class="text-success">+5% vs mes anterior</small>
            </Body>
        </EzCard>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <EzCard>
            <Body>
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <small class="text-muted d-block">Cumplimiento de Plazos</small>
                        <h3 class="mb-0">87%</h3>
                    </div>
                    <EzAvatar Variant="EzAvatar.AvatarVariant.Warning" Size="EzAvatar.AvatarSize.Small">
                        <i class="fa-light fa-minus"></i>
                    </EzAvatar>
                </div>
                <div class="progress" style="height: 5px;">
                    <div class="progress-bar bg-warning" style="width: 87%"></div>
                </div>
                <small class="text-warning">Sin cambios</small>
            </Body>
        </EzCard>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <EzCard>
            <Body>
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <small class="text-muted d-block">Satisfacción del Cliente</small>
                        <h3 class="mb-0">4.5/5</h3>
                    </div>
                    <EzAvatar Variant="EzAvatar.AvatarVariant.Info" Size="EzAvatar.AvatarSize.Small">
                        <i class="fa-light fa-star"></i>
                    </EzAvatar>
                </div>
                <div class="d-flex gap-1">
                    @for(int i = 1; i <= 5; i++)
                    {
                        <i class="fa-solid fa-star @(i <= 4 ? "text-warning" : "text-muted")"></i>
                    }
                </div>
            </Body>
        </EzCard>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <EzCard>
            <Body>
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <small class="text-muted d-block">Índice de Seguridad</small>
                        <h3 class="mb-0">98%</h3>
                    </div>
                    <EzAvatar Variant="EzAvatar.AvatarVariant.Success" Size="EzAvatar.AvatarSize.Small">
                        <i class="fa-light fa-shield-check"></i>
                    </EzAvatar>
                </div>
                <div class="progress" style="height: 5px;">
                    <div class="progress-bar bg-success" style="width: 98%"></div>
                </div>
                <small class="text-success">365 días sin accidentes</small>
            </Body>
        </EzCard>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <EzCard>
            <Header>
                <h5 class="card-title mb-0">Tendencia de KPIs</h5>
            </Header>
            <Body>
                <div class="text-center py-5">
                    <i class="fa-light fa-chart-line fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Gráfico de tendencias de KPIs</p>
                </div>
            </Body>
        </EzCard>
    </div>
    <div class="col-lg-4">
        <EzCard>
            <Header>
                <h5 class="card-title mb-0">Top Proyectos</h5>
            </Header>
            <Body>
                <div class="list-group list-group-flush">
                    @for(int i = 1; i <= 3; i++)
                    {
                        <div class="list-group-item px-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Proyecto @i</h6>
                                    <small class="text-muted">Score: 95%</small>
                                </div>
                                <EzBadge Text="@i.ToString()" Variant="@(i == 1 ? EzBadge.BadgeVariant.Warning : EzBadge.BadgeVariant.Secondary)" />
                            </div>
                        </div>
                    }
                </div>
            </Body>
        </EzCard>
    </div>
</div>

@code {
    private void UpdateKPIs(DateTime start, DateTime end)
    {
