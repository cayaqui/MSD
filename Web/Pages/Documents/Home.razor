// Contracts/Index.razor
@page "/contracts"
@using Web.Components.Common
@attribute [Authorize]

<PageTitle>Contratos - EzPro</PageTitle>

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fa-light fa-file-contract me-2"></i>Contratos
            </h1>
        </div>
        <div class="col-auto">
            <a href="/contracts/new" class="btn btn-primary">
                <i class="fa-light fa-plus me-2"></i>Nuevo Contrato
            </a>
        </div>
    </div>
</div>

<EzCard>
    <Body>
        <EzTabControl>
            <Tabs>
                <EzTab Title="Activos" Icon="fa-light fa-circle-check">
                    <Content>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Código</th>
                                        <th>Contratista</th>
                                        <th>Proyecto</th>
                                        <th>Monto</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>CON-2024-001</td>
                                        <td>Constructora ABC</td>
                                        <td>Planta Industrial</td>
                                        <td>$850,000</td>
                                        <td><EzBadge Text="Activo" Variant="EzBadge.BadgeVariant.Success" /></td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-light"><i class="fa-light fa-eye"></i></button>
                                                <button class="btn btn-light"><i class="fa-light fa-edit"></i></button>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </Content>
                </EzTab>
                <EzTab Title="En Revisión" Icon="fa-light fa-clock" BadgeCount="3">
                    <Content>
                        <p>Contratos en proceso de revisión...</p>
                    </Content>
                </EzTab>
                <EzTab Title="Finalizados" Icon="fa-light fa-flag-checkered">
                    <Content>
                        <p>Contratos finalizados...</p>
                    </Content>
                </EzTab>
            </Tabs>
        </EzTabControl>
    </Body>
</EzCard>

