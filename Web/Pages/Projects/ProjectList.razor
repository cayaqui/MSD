@page "/projects"
@using Web.Components.Common
@attribute [Authorize]

<PageTitle>Proyectos - EzPro</PageTitle>

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fa-light fa-project-diagram me-2"></i>Proyectos
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Proyectos</li>
                </ol>
            </nav>
        </div>
        <div class="col-auto">
            <div class="btn-group">
                <a href="/projects/new" class="btn btn-primary">
                    <i class="fa-light fa-plus me-2"></i>Nuevo Proyecto
                </a>
                <EzDropdown Variant="EzDropdown.ButtonVariant.Light" Split="true">
                    <ButtonContent>
                        <i class="fa-light fa-filter"></i>
                    </ButtonContent>
                    <ChildContent>
                        <EzDropdownItem Icon="fa-light fa-check">Todos los Proyectos</EzDropdownItem>
                        <EzDropdownItem Icon="fa-light fa-circle-play">Activos</EzDropdownItem>
                        <EzDropdownItem Icon="fa-light fa-circle-pause">En Pausa</EzDropdownItem>
                        <EzDropdownItem Icon="fa-light fa-circle-check">Completados</EzDropdownItem>
                        <EzDropdownItem IsDivider="true" />
                        <EzDropdownItem Icon="fa-light fa-star">Mis Proyectos</EzDropdownItem>
                    </ChildContent>
                </EzDropdown>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <EzSearchBox Placeholder="Buscar proyectos..." OnSearch="SearchProjects" />
    </div>
    <div class="col-md-6 text-end">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-light active">
                <i class="fa-light fa-grid"></i>
            </button>
            <button type="button" class="btn btn-light">
                <i class="fa-light fa-list"></i>
            </button>
        </div>
    </div>
</div>

<div class="row">
    @for (int i = 1; i <= 6; i++)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <EzCard IsHoverable="true" OnClick="() => ViewProject(i)">
                <Header>
                    <div class="d-flex justify-content-between align-items-start">
                        <h6 class="card-title mb-0">Proyecto @i</h6>
                        <EzBadge Text="Activo" Variant="EzBadge.BadgeVariant.Success" Size="EzBadge.BadgeSize.Small" />
                    </div>
                </Header>
                <Body>
                    <p class="text-muted small">Construcción de planta industrial para procesamiento...</p>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small>Progreso</small>
                            <small>65%</small>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-primary" style="width: 65%"></div>
                        </div>
                    </div>

                    <div class="row text-center">
                        <div class="col-4">
                            <EzTooltip Text="Fecha de Inicio">
                                <small class="text-muted d-block">Inicio</small>
                                <strong>15/01/24</strong>
                            </EzTooltip>
                        </div>
                        <div class="col-4">
                            <EzTooltip Text="Fecha de Fin Planificada">
                                <small class="text-muted d-block">Fin</small>
                                <strong>30/12/24</strong>
                            </EzTooltip>
                        </div>
                        <div class="col-4">
                            <EzTooltip Text="Presupuesto Total">
                                <small class="text-muted d-block">Presupuesto</small>
                                <strong>$450K</strong>
                            </EzTooltip>
                        </div>
                    </div>
                </Body>
                <Footer>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="avatar-group">
                            <EzAvatar Text="Juan Pérez" Size="EzAvatar.AvatarSize.Small" Stacked="true" ShowTooltip="true" TooltipText="Juan Pérez" />
                            <EzAvatar Text="María López" Size="EzAvatar.AvatarSize.Small" Stacked="true" ShowTooltip="true" TooltipText="María López" />
                            <EzAvatar Text="+3" Size="EzAvatar.AvatarSize.Small" Stacked="true" Variant="EzAvatar.AvatarVariant.Secondary" />
                        </div>
                        <div class="btn-group btn-group-sm">
                            <EzTooltip Text="Ver Detalles">
                                <button class="btn btn-light" @onclick:stopPropagation="true">
                                    <i class="fa-light fa-eye"></i>
                                </button>
                            </EzTooltip>
                            <EzTooltip Text="Editar">
                                <button class="btn btn-light" @onclick:stopPropagation="true">
                                    <i class="fa-light fa-edit"></i>
                                </button>
                            </EzTooltip>
                        </div>
                    </div>
                </Footer>
            </EzCard>
        </div>
    }
</div>

<EzPagination TotalPages="5" CurrentPage="1" OnPageChanged="OnPageChanged" />

