@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Class="mb-4">
            Extend assignment for '@ItemName':
        </MudText>
        <MudDatePicker @bind-Date="_newDate" Label="New End Date" 
                       MinDate="DateTime.Today.AddDays(1)"
                       Variant="Variant.Outlined" DateFormat="yyyy-MM-dd" />
        <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-2">
            Current End Date: @CurrentDate.ToString("yyyy-MM-dd")
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" 
                   OnClick="Submit" Disabled="@(!_newDate.HasValue || _newDate <= CurrentDate)">
            Extend
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter] public string ItemName { get; set; } = string.Empty;
    [Parameter] public DateTime CurrentDate { get; set; }
    
    private DateTime? _newDate;

    protected override void OnInitialized()
    {
        _newDate = CurrentDate.AddMonths(3); // Default to 3 months extension
    }

    private void Cancel() => MudDialog.Cancel();

    private void Submit()
    {
        if (_newDate.HasValue && _newDate > CurrentDate)
        {
            MudDialog.Close(DialogResult.Ok(_newDate.Value));
        }
    }
}