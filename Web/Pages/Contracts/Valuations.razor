@page "/contracts/valuations"
@using Web.Components.Common
@attribute [Authorize]

<PageTitle>Valuaciones - EzPro</PageTitle>

<div class="page-header">
    <h1 class="page-title">
        <i class="fa-light fa-file-invoice-dollar me-2"></i>Valuaciones
    </h1>
</div>

<div class="row">
    <div class="col-lg-3">
        <EzCard>
            <Body>
                <small class="text-muted d-block">Total Valuado</small>
                <h3 class="mb-0">$1,245,000</h3>
            </Body>
        </EzCard>
    </div>
    <div class="col-lg-3">
        <EzCard>
            <Body>
                <small class="text-muted d-block">Pendiente Aprobación</small>
                <h3 class="mb-0 text-warning">$125,000</h3>
            </Body>
        </EzCard>
    </div>
    <div class="col-lg-3">
        <EzCard>
            <Body>
                <small class="text-muted d-block">Aprobado</small>
                <h3 class="mb-0 text-success">$1,120,000</h3>
            </Body>
        </EzCard>
    </div>
    <div class="col-lg-3">
        <EzCard>
            <Body>
                <small class="text-muted d-block">Retenciones</small>
                <h3 class="mb-0">$62,250</h3>
            </Body>
        </EzCard>
    </div>
</div>

<EzCard Class="mt-4">
    <Header>
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Listado de Valuaciones</h5>
            <button class="btn btn-primary btn-sm">
                <i class="fa-light fa-plus me-2"></i>Nueva Valuación
            </button>
        </div>
    </Header>
    <Body>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>N° Valuación</th>
                        <th>Contrato</th>
                        <th>Período</th>
                        <th>Monto</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>VAL-001</td>
                        <td>CON-2024-001</td>
                        <td>Enero 2024</td>
                        <td>$125,000</td>
                        <td><EzBadge Text="Pendiente" Variant="EzBadge.BadgeVariant.Warning" /></td>
                        <td>
                            <button class="btn btn-sm btn-light">Revisar</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </Body>
</EzCard>

