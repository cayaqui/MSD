@page "/reports"
@using Web.Components.Common
@attribute [Authorize]

<PageTitle>Reportes - EzPro</PageTitle>

<div class="page-header">
    <h1 class="page-title">
        <i class="fa-light fa-chart-bar me-2"></i>Reportes
    </h1>
</div>

<div class="row">
    <div class="col-lg-4 col-md-6 mb-4">
        <EzCard IsHoverable="true" OnClick="() => GenerateReport(1)">
            <Body>
                <div class="text-center">
                    <EzAvatar Variant="EzAvatar.AvatarVariant.Primary" Size="EzAvatar.AvatarSize.Large" Class="mb-3">
                        <i class="fa-light fa-file-chart-line"></i>
                    </EzAvatar>
                    <h6>Reporte de Avance</h6>
                    <p class="text-muted small">Estado general de proyectos</p>
                </div>
            </Body>
        </EzCard>
    </div>
    
    <div class="col-lg-4 col-md-6 mb-4">
        <EzCard IsHoverable="true" OnClick="() => GenerateReport(2)">
            <Body>
                <div class="text-center">
                    <EzAvatar Variant="EzAvatar.AvatarVariant.Success" Size="EzAvatar.AvatarSize.Large" Class="mb-3">
                        <i class="fa-light fa-file-invoice-dollar"></i>
                    </EzAvatar>
                    <h6>Reporte Financiero</h6>
                    <p class="text-muted small">Análisis de costos y presupuestos</p>
                </div>
            </Body>
        </EzCard>
    </div>
    
    <div class="col-lg-4 col-md-6 mb-4">
        <EzCard IsHoverable="true" OnClick="() => GenerateReport(3)">
            <Body>
                <div class="text-center">
                    <EzAvatar Variant="EzAvatar.AvatarVariant.Warning" Size="EzAvatar.AvatarSize.Large" Class="mb-3">
                        <i class="fa-light fa-file-contract"></i>
                    </EzAvatar>
                    <h6>Reporte de Contratos</h6>
                    <p class="text-muted small">Estado de contratos y valuaciones</p>
                </div>
            </Body>
        </EzCard>
    </div>
</div>

<EzCard>
    <Header>
        <h5 class="card-title mb-0">Reportes Generados</h5>
    </Header>
    <Body>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Reporte</th>
                        <th>Tipo</th>
                        <th>Generado</th>
                        <th>Usuario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Avance Mensual - Enero 2024</td>
                        <td><EzBadge Text="Avance" Variant="EzBadge.BadgeVariant.Primary" /></td>
                        <td>15/01/2024 10:30</td>
                        <td>Juan Pérez</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-light"><i class="fa-light fa-download"></i></button>
                                <button class="btn btn-light"><i class="fa-light fa-eye"></i></button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </Body>
</EzCard>

@code {
    private void GenerateReport(int reportType)
    {
        // Generar reporte
    }
}
