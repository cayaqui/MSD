@if (IsLoading)
{
    <div class="loading-container @(Overlay ? "loading-overlay" : "") @(FullScreen ? "fullscreen" : "")">
        <div class="loading-content">
            <div class="spinner-border @($"text-{Color}")" style="@($"width: {Size}rem; height: {Size}rem;")" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="loading-message mt-3">@Message</div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public string Color { get; set; } = "primary";
    [Parameter] public double Size { get; set; } = 3;
    [Parameter] public bool Overlay { get; set; } = true;
    [Parameter] public bool FullScreen { get; set; } = false;
}

<style>
    .loading-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.9);
        z-index: 100;
    }

        .loading-overlay.fullscreen {
            position: fixed;
            z-index: 9999;
        }

    .loading-content {
        text-align: center;
    }

    .loading-message {
        color: var(--text-secondary);
        font-weight: 500;
    }
</style>