<footer class="footer">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="text-muted">
                    &copy; @DateTime.Now.Year EzPro - Sistema de Control de Proyectos.
                    Todos los derechos reservados.
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="text-muted">
                    Versión @version |
                    <a href="/help" class="text-muted">Ayuda</a> |
                    <a href="/terms" class="text-muted">Términos</a> |
                    <a href="/privacy" class="text-muted">Privacidad</a>
                </div>
            </div>
        </div>
    </div>
</footer>

@code {
    private string version = "1.0.0";

    protected override void OnInitialized()
    {
        // En producción, esto podría venir de la configuración
        var configuration = Configuration.GetSection("AppSettings");
        version = configuration["Version"] ?? "1.0.0";
    }

    [Inject]
    private IConfiguration Configuration { get; set; } = default!;
}

<style>
    :root {
        --footer-height: 60px;
    }

    .footer {
        background-color: var(--bg-white);
        border-top: 1px solid var(--border-color);
        padding: 1rem 0;
        margin-top: auto;
        font-size: 0.875rem;
    }

        .footer a {
            text-decoration: none;
        }

            .footer a:hover {
                color: var(--primary) !important;
            }
</style>