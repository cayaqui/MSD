    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInfo("MainLayout inicializándose...");
            
            // Obtener información del usuario autenticado
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                // Obtener nombre del usuario
                _userName = user.FindFirst("name")?.Value 
                    ?? user.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value
                    ?? user.Identity.Name 
                    ?? "Usuario";
                    
                // Obtener email del usuario
                _userEmail = user.FindFirst("email")?.Value 
                    ?? user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                    ?? user.FindFirst("preferred_username")?.Value
                    ?? user.FindFirst("upn")?.Value
                    ?? "usuario@empresa.com";
                
                Logger.LogInfo($"Usuario autenticado: {_userName} ({_userEmail})");
                
                // Sincronizar con Azure AD para obtener la foto
                try
                {
                    var (success, userInfo) = await UserPhotoService.SyncUserWithPhotoAsync();
                    if (success && userInfo != null)
                    {
                        Logger.LogInfo("Sincronización con Azure AD exitosa");
                        
                        // Actualizar información del usuario si está disponible
                        if (!string.IsNullOrEmpty(userInfo.DisplayName))
                            _userName = userInfo.DisplayName;
                            
                        if (!string.IsNullOrEmpty(userInfo.Email))
                            _userEmail = userInfo.Email;
                            
                        if (!string.IsNullOrEmpty(userInfo.PhotoUrl))
                        {
                            _userAvatar = userInfo.PhotoUrl;
                            Logger.LogInfo($"Foto del usuario cargada desde Azure AD. URL: {userInfo.PhotoUrl.Substring(0, Math.Min(50, userInfo.PhotoUrl.Length))}...");
                        }
                        else
                        {
                            Logger.LogInfo("El usuario no tiene foto disponible en Azure AD");
                        }
                        
                        // Actualizar UI
                        StateHasChanged();
                    }
                    else
                    {
                        Logger.LogWarning("No se pudo sincronizar con Azure AD");
                    }
                }
                catch (Exception syncEx)
                {
                    Logger.LogError(syncEx, "Error durante la sincronización con Azure AD");
                }
            }
            else
            {
                Logger.LogWarning("Usuario no autenticado en MainLayout");
                _userName = "Usuario";
                _userEmail = "";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al inicializar MainLayout");
            _userName = "Usuario";
            _userEmail = "";
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Configuración inicial simplificada
                _sidebarOpen = true;
                _isDarkMode = false;
                
                // Detectar si es móvil de forma segura
                try
                {
                    _isMobile = await JS.InvokeAsync<bool>("eval", "window.innerWidth < 992");
                    if (_isMobile)
                    {
                        _sidebarOpen = false;
                    }
                }
                catch
                {
                    // Si falla, asumir que no es móvil
                    _isMobile = false;
                }
                
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error en OnAfterRenderAsync");
            }
        }
    }

    private async Task ToggleSidebar()
    {
        try
        {
            if (_isMobile)
            {
                // Mobile behavior - toggle open/close
                _sidebarOpen = !_sidebarOpen;
            }
            else
            {
                // Desktop behavior - toggle collapsed state
                _sidebarCollapsed = !_sidebarCollapsed;
                
                // Guardar en localStorage de forma segura
                try
                {
                    await JS.InvokeVoidAsync("localStorage.setItem", "sidebarCollapsed", _sidebarCollapsed.ToString().ToLower());
                }
                catch
                {
                    // Si falla localStorage, continuar sin guardar
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al alternar sidebar");
        }
    }

    private async Task ToggleTheme()
    {
        try
        {
            _isDarkMode = !_isDarkMode;
            
            // Guardar en localStorage de forma segura
            try
            {
                await JS.InvokeVoidAsync("localStorage.setItem", "theme", _isDarkMode ? "dark" : "light");
            }
            catch
            {
                // Si falla localStorage, continuar sin guardar
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al cambiar tema");
        }
    }

